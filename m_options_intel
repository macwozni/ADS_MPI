MPI_INCLUDE = /opt/mpich3.2/include

DIALECT = -std08  -module . -implicitnone -fpp -openmp
BOUNDS = -check bounds
RELEASE_OPTS = -funroll-all-loops -O3 -DPERFORMANCE=1
