#-L/opt/mpich3.2/lib64/libmpifort.so  -L/opt/mpich3.2/lib64/libmpi.so -Wl,-rpath,/opt/mpich3.2/lib64/libmpifort.so:/opt/mpich3.2/lib64/libmpi.so:/opt/mpich3.2/lib64  /opt/mpich3.2/lib64/libmpifort.so /opt/mpich3.2/lib64/libmpi.so 


FF		=  ifort \
